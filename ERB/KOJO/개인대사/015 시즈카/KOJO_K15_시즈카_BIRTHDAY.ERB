@KOJO_BIRTHDAY_CELEBRATION_K15
#DIMS DYNAMIC LNAME
#DIMS DYNAMIC LTEXT
#DIMS DYNAMIC LTEXT2
#DIMS DYNAMIC LTEXT3
#DIM DYNAMIC FACEV
LNAME = %CALLNAME:[[시즈카]]%
SELECTCASE TODAY_BIRTHDAY
    CASE 0
        FACEV = 3
        LTEXT = 생일 축하해요, %BYNAMES([[시즈카]],0)%
        LTEXT2 = 아휴, 잊었을리가 없잖아요.
    CASEELSE
        FACEV = 1
        IF JONDAE([[시즈카]],TODAY_BIRTHDAY)
            LTEXT = %BYNAMES([[시즈카]],TODAY_BIRTHDAY)%, 생일 축하해요.
        ELSE
            LTEXT = 생일 축하해, %BYNAMES([[시즈카]],TODAY_BIRTHDAY)%!
        ENDIF
ENDSELECT
CALL TALK_WITH_IMG(FACE([[시즈카]],FACEV),LNAME,LTEXT,LTEXT2,LTEXT3)
WAITANYKEY