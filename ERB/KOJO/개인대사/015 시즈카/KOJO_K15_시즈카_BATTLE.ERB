;적 조우 시 (선두)
@KOJO_BATTLE_ENCOUNTER_K15
#DIMS DYNAMIC LNAME
#DIMS DYNAMIC LTEXT
LNAME = %CALLNAME:[[시즈카]]%
IF FLAG:탐색대상던전 == 1 && DUNGEON1_FLAG:3 == 0
    ;FIRST BATTLE
    LTEXT = 이것들은 뭐지?!
    CALL TALK_WITH_IMG(FACE([[시즈카]],4),LNAME,LTEXT)
    WAITANYKEY
    RETURN 1
ELSE
    SELECTCASE RAND:2
        CASE 0
            LTEXT = 적 등장!
        CASE 1
            IF JONDAE([[시즈카]],FLAG:2)
                LTEXT = 적들이에요!
            ELSE
                LTEXT = 적들이야!
            ENDIF
    ENDSELECT
    CALL TALK_WITH_IMG(FACE([[시즈카]],5),LNAME,LTEXT)
    WAITANYKEY
    RETURN 1
ENDIF
