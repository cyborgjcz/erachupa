    WAITANYKEY
    DUNGEON1_FLAG:3 += 1
    RETURN 1
ELSE
    LTEXT = 얼마든지 덤비시죠!
    CALL TALK_WITH_IMG(FACE([[시즈카]],5),LNAME,LTEXT)
    WAITANYKEY
    RETURN 1
ENDIF

