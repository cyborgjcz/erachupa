;기간트의 파츠 내구도가 사용불능 수준인가?
@IS_GIGANT_PART_DISABLE(PARTV)
#FUNCTION
#DIM DYNAMIC PARTV
SIF CURRENT_GIGANT:PARTV == -1
    RETURNF 1
{
    SIF GIGANT_DAMAGE:PARTV >= 
    (GET_GIGANT_PART_BASE_STAT(STOCK_PARTD:(CURRENT_GIGANT:PARTV),GIGANT_내구임계) +
    MOD_DATA:(CURRENT_GIGANT:PARTV):GIGANT_내구임계)
}
    RETURNF 1
RETURNF 0

;기간트의 파츠 총합 스탯 계산
@GET_GIGANT_MODED_STAT(PARTV,KEYV)
#FUNCTION
#DIM DYNAMIC PARTV
#DIM DYNAMIC KEYV
SIF CURRENT_GIGANT:PARTV == -1
    RETURNF 0
RETURNF GET_GIGANT_PART_BASE_STAT(STOCK_PARTD:(CURRENT_GIGANT:PARTV),KEYV) + MOD_DATA:(CURRENT_GIGANT:PARTV):KEYV

@GET_GIGANT_TOTAL_STAT(KEYV)
#FUNCTION
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC TOTALV
#DIM DYNAMIC KEYV

FOR LCOUNT,0,8
    SIF CURRENT_GIGANT:LCOUNT == -1
        CONTINUE
    TOTALV += GET_GIGANT_PART_BASE_STAT(STOCK_PARTD:(CURRENT_GIGANT:LCOUNT),KEYV)
    TOTALV += MOD_DATA:(CURRENT_GIGANT:LCOUNT):KEYV
NEXT
RETURNF TOTALV


;기간트의 파츠 총합 피격 대미지
@GET_GIGANT_TOTAL_DAMAGE
#FUNCTION
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC TOTALV

FOR LCOUNT,0,8
    TOTALV += GIGANT_DAMAGE:LCOUNT
NEXT
RETURNF TOTALV