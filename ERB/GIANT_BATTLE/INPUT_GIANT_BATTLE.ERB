CALL SHOW_GIANT_BATTLE_COMMAND
CALL INPUT_GIANT_BATTLE_COMMAND

@SHOW_GIANT_BATTLE_COMMAND
IF !GIGANT_TUMBLE
    PRINTBUTTON "［ｑ］↶","q"
    PRINTBUTTON "［ｗ］↑","w"
    PRINTBUTTON "［ｅ］↷","e"
    PRINT_SPACE 365
    PRINTBUTTON "［ｒ］무기 교체","r"
    PRINTBUTTON "［ｉ］작전","i"
    PRINTL
    PRINTBUTTON "［ａ］무기 공격","a"
    PRINTBUTTON "［ｓ］태클 공격","s"
    PRINTBUTTON "［ｄ］방어 자세","d"
    PRINTBUTTON "［ｆ］백스텝","f"
