[SKIPSTART]
@WHITEBOARD_DATA_{NUMBER}(MODEV,KEYV=0,KEYS="")
#DIM DYNAMIC MODEV
#DIM DYNAMIC KEYV
#DIMS DYNAMIC KEYS
SELECTCASE MODEV
    CASE WHITEBOARD_NAME
        RESULTS = 하찌미~
        RETURN 1
    CASE WHITEBOARD_PRINT
        REPEAT 20
            SELECTCASE COUNT
                CASE 8
                CASEELSE
                    PRINTL
            ENDSELECT
        REND
    CASE WHITEBOARD_ENABLE
        RETURN 1
    CASE WHITEBOARD_CLEAR
        IF WHITEBOARD_FLAG:1:1 >= 3
            WHITEBOARD_FLAG:1:0 = 1
            RETURN 1
        ENDIF
    CASE WHITEBOARD_INCREASE
        SELECTCASE KEYS
            CASE "_"
                SIF KEYV == 1
                    WHITEBOARD_FLAG:_:1 += 1
        ENDSELECT
    CASE WHITEBOARD_REWARD
        PRINTL 을를 얻었다.
        ITEM:[[?]] += 1
        WAITANYKEY
ENDSELECT
