@SYSTEM_TITLE
#DIMS DYNAMIC VERSIONSTRING
#DIM DYNAMIC FOO
#DIM DYNAMIC LINENUM

LOADGLOBAL
RESULT = GLOBAL
SAVEGLOBAL
LOADGLOBAL

;버전 표기 연산 1001이라면 1.001, 1100라면 1.10이라고 표시되도록.
VERSIONSTRING = {GAMEBASE_VERSION / 1000}.%TOSTR(GAMEBASE_VERSION % 1000 / 10,"00")%
SIF GAMEBASE_VERSION % 10 != 0
    VERSIONSTRING = %TOSTR(GAMEBASE_VERSION / 1000)%{GAMEBASE_VERSION % 10}

REDRAW 0
CLEARLINE 1
RESULT  = 1
LINENUM = LINECOUNT

STOPBGM
SETBGMVOLUME 20

DO
	FOR FOO, 0, 126
		CLEARLINE LINECOUNT - LINENUM
		$START
		ALIGNMENT LEFT
		CUSTOMDRAWLINE ━
        {
        PRINTFORML %GAMEBASE_TITLE%
        \nv%VERSIONSTRING%
        \n작자: %GAMEBASE_AUTHOR%
        \n(%GAMEBASE_YEAR%)
        \n\n%GAMEBASE_INFO%
        }
		CUSTOMDRAWLINE ━
		PRINTFORML [0] 시작하기
		PRINTFORML [1] 불러오기
		ALIGNMENT LEFT
		INPUT
		CUSTOMDRAWLINE ━
		SELECTCASE RESULT
			CASE 0
				RESETDATA
				ADDCHARA 0
				BEGIN FIRST
			CASE 1
				LOADGAME
		ENDSELECT
		GOTO START
	NEXT
LOOP RESULT
REDRAW 1