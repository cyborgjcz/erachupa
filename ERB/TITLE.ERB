	#DIM DYNAMIC DRAWINGA,211 = 27, 2, 38, 0, 6, 0,
	25, 6, 3, 3, 30, 0, 6, 0,
	24, 8, 2, 3, 30, 0, 6, 0,
	3, 2, 6, 2, 4, 1, 5, 10, 1, 3, 1, 1, 14, 2, 7, 2, 3, 0, 6, 0,
	1, 6, 3, 3, 2, 5, 3, 3, 3, 4, 1, 6, 3, 2, 1, 3, 3, 5, 3, 6, 1, 0, 6,
	8, 1, 4, 1, 7, 2, 3, 8, 7, 2, 2, 1, 3, 2, 7, 1, 8, 6,
	3, 1, 4, 1, 3, 2, 3, 1, 3, 2, 3, 4, 3, 1, 3, 1, 3, 2, 2, 1, 3, 2, 2, 2, 3, 1, 3, 1, 4, 6,
	3, 6, 3, 2, 2, 2, 3, 2, 4, 2, 4, 1, 3, 1, 3, 2, 2, 1, 3, 1, 3, 2, 3, 1, 3, 2, 3, 6,
	5, 4, 3, 2, 7, 2, 9, 2, 3, 1, 3, 2, 6, 1, 8, 1, 8, 6, 0,
	1, 5, 3, 3, 2, 7, 3, 7, 3, 3, 1, 3, 2, 5, 2, 7, 3, 7, 6, 0,
	2, 4, 3, 3, 3, 6, 4, 5, 4, 3, 1, 3, 3, 4, 2, 6, 5, 6, 6, 0,
	50, 3, 14, 0, 6, 0,
